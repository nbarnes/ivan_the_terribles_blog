
<%= render "shared/post", post: @post %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> |
<%= link_to 'Add New Comment', new_post_comment_path(@post) %>
<% @post.comments.includes(:replies).each do |comment| %>
  <div class="comment"><h3>Comment:</h3></div>
  <%= render 'shared/comment', comment: comment %>
    <div class='reply'><%= link_to 'Add Reply To Comment', new_post_comment_reply_path(@post, comment) %></div>
    <% comment.replies.each do |reply| %>
      <div class="reply"><h4>Replies to comment:<h4></div>
      <%= render 'shared/reply', reply: reply %>
    <% end %>
<% end %>